<?xml version="1.0" encoding="utf-8"?>
<com.shmup.hiscores.scores.view.TimelineItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Il y a 2 jours" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:id="@+id/coverImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Last Resort" />

            <TextView
                android:id="@+id/playerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123456" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/platformTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#27ae60"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            tools:text="SNES" />

        <TextView
            android:id="@+id/modeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7f8c8d"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            tools:text="Arcade" />

        <TextView
            android:id="@+id/difficultyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f1c40f"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            tools:text="Hard" />

        <TextView
            android:id="@+id/oneccTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#c0392b"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            tools:text="1CC" />

    </LinearLayout>



</com.shmup.hiscores.scores.view.TimelineItemView>