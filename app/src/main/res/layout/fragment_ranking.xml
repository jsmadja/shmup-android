<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/modeTextView"
            style="@style/OptionLabel"
            android:layout_marginEnd="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"
            android:background="@color/mode"
            tools:text="@string/modePlaceHolder" />

        <TextView
            android:id="@+id/difficultyTextView"
            style="@style/OptionLabel"
            android:layout_marginEnd="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"
            android:background="@color/difficulty"
            tools:text="@string/difficultyPlaceHolder" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>